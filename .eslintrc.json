{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:json/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {},
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["standard-with-typescript", "plugin:react/recommended"],
      "rules": {
        "react/react-in-jsx-scope": "off",
        "react/jsx-uses-react": "off"
      },
      "parserOptions": {
        "project": "tsconfig.json"
      }
    }
  ]
}
